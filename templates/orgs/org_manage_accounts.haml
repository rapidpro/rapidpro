-extends 'smartmin/form.html'
-load smartmin temba compress i18n

-block title
  -if parent
    {{org.name}}
  -else
    {{user_org.name|capfirst}}

-block subtitle
  -trans "Manage Logins"

-block extra-style
  {{block.super}}
  :css
    temba-checkbox {
      --fa-icon-fill-color: #999;
    }

-block fields
  %table.list.mb-0
    %thead
      %tr
        %th
          -trans "Login"
        %th
          -trans "Role"
        %th
          .text-center
            -trans "Remove"

    %tbody
      -for row in form.user_rows
        %tr
          %td
            {{ row.user.email }}
            -if row.user.first_name or row.user.last_name
              ({{ row.user.first_name }} {{ row.user.last_name }})
          %td.w-48
            {% render_field row.role_field %}
          %td
            .m-auto(style="width:24px")
              {% render_field row.remove_field %}

      // pending invites
      -if has_invites
        %tr.invites-title
          %th(colspan=3)
            -trans "Pending Invitations"

      -for row in form.invite_rows
        %tr
          %td.opacity-50
            {{ row.invite.email }} (Invite Sent)
          %td.opacity-50.w-48
            {% render_field row.role_field %}
          %td
            .text-center
              {% render_field row.remove_field %}

  .card
    .title.mb-0.pb-0
      -trans "Invite New Users"

    .flex.w-full.items-end
      .pr-4.flex-grow
        {% render_field 'invite_emails' %}
      .group.w-48
        {% render_field 'invite_role' %}

-block form-buttons
  .form-actions.mt-4.ml-2
    %input.button-primary(type="submit" value="{{ submit_button_name }}")
