-extends "smartmin/form.html"
-load i18n

-block extra-script
  {{ block.super }}

  :javascript
    $(function(){
      $("#id_country").select2();
      $('#id_role').select2({ minimumResultsForSearch: -1, width: '150px' });
    });

-block title
  .medium-help.icon-channel-twilio.float-left

  %h2.font_normalize.header-margin
    -trans "Connect TwiML REST API"

-block pre-form
  .info
    %p
      -blocktrans
        You can add a TwiML REST API as a channel using your TwiML instance.


-block extra-style
  {{ block.super }}

  :css
    #s2id_id_country {
      width: 370px;
    }

    .info {
      width: 800px;
      margin-bottom: 20px;
    }

    .medium-help {
      font-size: 50px;
      height: 50px;
    }

    .header-margin {
      margin-left: 60px;
    }

    .help-block {
      margin-left:150px;
      margin-bottom:20px;
    }

    .form-group {
      margin-bottom:15px;
    }

