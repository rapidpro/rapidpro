-extends "smartmin/base.html"
-load i18n

-block title
  .title-icon
    .glyph.icon-download{ style:"float: left" }
  .title-text
    %h1
      - trans "Download"

- block content
  - if not file_error
    .{ style:"margin: 30px 0;" }
      - blocktrans trimmed
        Your download should start automatically. If it doesn't start in a few seconds, use the button below to download.
    %a.btn.btn-primary{ href: "{{ download_url }}" }
      .glyph.icon-download{ style: "margin-right: 5px" }
      - trans "Download Now"
  - else
    .alert.alert-warning
      {{ file_error }}

-block extra-script
  :javascript
    {% if not file_error %}
    $(document).ready(function() {
      window.location.href = "{{ download_url }}";
    });
    {% endif %}