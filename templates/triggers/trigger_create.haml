-extends "smartmin/base.html"
-load i18n

-block extra-style
  :css
    .form-horizontal .control-label {
      display:block;
      float:none;
      font-weight:500;
    }

    .help-block {
      font-size: 85%;
      color: #ccc;
    }

    .submit-button {
      margin-top:15px;
    }

    .title-text {
      margin-left: 0px;
    }

-block content

  %p.instructions
    -trans "Triggers allow users to start flows based on user actions or schedules."

  -include "formax.haml"

-block extra-script
  {{ block.super }}
  <script src="{% url 'django.views.i18n.javascript_catalog' %}"></script>
  <script type="text/javascript" src="{{ STATIC_URL }}js/jquery.jsPlumb-1.4.1-all-min.js "></script>

