-extends "smartmin/update.html"

-load smartmin

-block fields
  %fieldset
    #field-table-container
      %table#field-table
        %tr
          %th Name
          %th Type
          %th Show

        -for field_fields in contact_fields
          %tr
            %td.field-label
              {% render_field field_fields.label %}

            %td.field-type
              {% render_field field_fields.type %}

            %td.field-show
              {% render_field field_fields.show %}
              {% render_field field_fields.field %}


-block modal-script
  :javascript
    $(".smartmin-form select").select2({minimumResultsForSearch: -1, width: '100%'});

-block modal-extra-style
  {{block.super}}
  :css
    .smartmin-form select {
      width: 150px;
      display: inline-block;
    }

    #field-table-container {
      margin-left: auto;
      margin-right: auto;
    }

    #field-table .help-block {
      font-size: 13px;
      margin-top: -6px;
    }

    #field-table tr th {
      font-size: 13px;
      margin-bottom:-5px;
      font-weight: 200;
      text-align: left;
    }

    #field-table td.field-label {
      width: 300px;
      vertical-align: top;
      padding-bottom: 5px;
      padding-right: 10px;
    }

    #field-table td.field-label input {
      width: 325px;
    }

    #field-table td.field-type {
      width: 170px;
      vertical-align: top;
    }

    #field-table td.field-show {
      width: 30px;
      vertical-align: top;
      text-align: center;
      padding-left: 10px;
      color: #888;
    }

    #field-table .control-label {
      display: none;
    }

    #field-table .controls {
      margin-left: 0px;
    }