    .title-icon {
      margin-bottom: -5px;
    }
    .icon-session:before {
      content: "\e03e";
      color: #999
    }

    .cell {
      overflow: clip;
      padding: 5px 5px 5px 5px;

    }

    .archive-row {

    }

    .archive-period {
      text-align: right;
      width: 130px;
    }

    .archive-size {
