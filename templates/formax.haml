%ul.formax
  -for section in formax.sections
    %li{id:'id-{{section.name}}', data-dependents:'{{section.dependents}}', data-button:'{{section.button}}', data-fetched:'true', data-href:'{{section.url}}', data-action:'{{section.action}}', class:'action-{{section.action}}'}
      .formax-icon{class:'{{section.icon}}'}
      .formax-container
        {{ section.response|safe }}