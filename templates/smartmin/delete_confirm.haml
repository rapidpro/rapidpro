{% extends "smartmin/base.html" %}

{% load smartmin i18n %}

-block page-top

-block content
  -block pjax

    :css
      .icon-warning.confirm {
       font-size:150px;
       color:#888;
      }

    .row
      .col-md-2
        .glyph.icon-warning.confirm
      .col-md-9
        <div class="confirmation">


          <h2>Remove {{ object }}?</h2>
          <p>Are you sure you want to remove <b>{{object}}</b> from your account?</p>
          <p>This cannot be undone.</p>

          <form method="POST" role="form">

            {% block delete_form %}{% endblock %}

            <div class="buttons">
              <a class="btn" href="{{ cancel_url }}">Cancel</a>
              {% csrf_token %}
                <button type="submit" class="btn btn-danger">{% trans "Remove" %}</button>
            </div>
          </form>

        </div>
